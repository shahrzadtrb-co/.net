<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> سایت خبری SKU </title>
    <base href="">
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/style.css">
    <script src="/Content/js/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v32.102/Vazirmatn-font-face.css" rel="stylesheet" type="text/css" />
    <style>
        h1,h2,h3,h4,h5,h6,p,span,a,input {
            font-family: Vazirmatn, sans-serif !important;
        }
    </style>
</head>
<body>
    <script src="/Content/js/modernizr.js"></script>
    <header class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="left-side">
                        <h1><a href="/">سایت خبری SKU</a></h1>
                        <h2> پایگاه اطلاع رسانی و خبری</h2>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <form action="/Search" method="get" class="border-radius">
                        <input class="border-radius" type="text" name="q" placeholder=" جستجو کنید ... ">
                        <button><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <nav class="main-menu">
        <div class="container">
            <span><i class="fa fa-th-list"></i></span>
            <ul>
                <li><a href="/"> صفحه اصلی </a></li>
                <li><a href="/Archive"> آرشیو خبر ها </a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href=""> خوش آمدید </a></li>
                    <li><a href="/Account/SignOut"> خروج </a></li>
                }
                else
                {
                    <li><a href="/Account/Login"> ورود به سایت </a></li>
                }
            </ul>
        </div>
    </nav>
    <div class="container margin-top-30">
        <div class="row">

            <aside class="col-md-4 col-sm-12 col-xs-12 pull-right">

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="thumbnail">
                        <ul>
                            <li>
                                <a target="_blank" href="/Admin/Pages">مدریت صفحات </a>
                            </li>
                        </ul>
                    </div>
                }
                @Html.Action("TopNews", "News")
            </aside>
            <div class="col-md-8 col-sm-12 col-xs-12 ">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <section class="access-links">
                        <header>
                            دسترسی سریع
                        </header>
                        <ul>
                            <li><a href="/"> صفحه اصلی </a></li>
                            <li><a href="/Archive"> آرشیو اخبار  </a></li>
                        </ul>
                    </section>
                </div>
                <div class="col-md-5 col-md-offset-1 col-sm-12 col-xs-12">
                    <div class="socials">
                        <span> شبکه های اجتماعی  ما</span>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-linkedin"></i></a>
                        <a href="#"><i class="fa fa-github"></i></a>
                        <div class="clearfix"></div>
                    </div>
                    <p>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/owl.carousel.js"></script>
    <script src="/Content/js/script.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>